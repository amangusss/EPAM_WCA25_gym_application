<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <conversionRule conversionWord="clr" class="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" class="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" class="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %clr([%thread]){magenta} %clr([%X{transactionId:-NO_TX}]){yellow} %highlight(%-5level) %cyan(%logger{50}) - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/gym-application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/gym-application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] [%X{transactionId:-NO_TX}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.github.amangusss.gym_application" level="DEBUG"/>

    <logger name="org.springframework" level="INFO"/>

    <logger name="org.hibernate" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="org.hibernate.SQL" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="org.hibernate.orm.jdbc.bind" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="org.jboss.logging" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="com.netflix.discovery" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="com.netflix.discovery.shared.resolver" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="org.apache.hc.client5" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="org.apache.http" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="org.apache.activemq" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>